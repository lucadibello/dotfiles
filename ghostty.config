# enable clipboard
clipboard-read = allow
clipboard-write = allow

# set terminal looks
font-size = 20
font-family = MonaspiceNe Nerd Font Mono
theme = Github Dark

# setup tmux entrypoint
command = bash $HOME/.config/ghostty/tmux-attach.sh

# ghostty behavior
window-save-state = default

# Enable font features
font-feature = calt
font-feature = ss01
font-feature = ss02
font-feature = ss03
font-feature = ss04
font-feature = ss05
font-feature = ss06
font-feature = ss07
font-feature = ss08
font-feature = ss09
font-feature = liga

# Set shell integration features
shell-integration = fish
shell-integration-features = cursor
shell-integration-features = title
shell-integration-features = sudo

# Keybind to reload terminal configuration
keybind = ctrl+b>r=reload_config
keybind = ctrl+b>f=toggle_split_zoom

